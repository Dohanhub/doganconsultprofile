    <script>
        // Initialize Particles.js for AI background
        particlesJS('particles-js', {
            particles: {
                number: { value: 80, density: { enable: true, value_area: 800 } },
                color: { value: '#00ff88' },
                shape: { type: 'circle' },
                opacity: { value: 0.5, random: false },
                size: { value: 3, random: true },
                line_linked: {
                    enable: true,
                    distance: 150,
                    color: '#00ff88',
                    opacity: 0.4,
                    width: 1
                },
                move: {
                    enable: true,
                    speed: 2,
                    direction: 'none',
                    random: false,
                    straight: false,
                    out_mode: 'out',
                    bounce: false
                }
            },
            interactivity: {
                detect_on: 'canvas',
                events: {
                    onhover: { enable: true, mode: 'grab' },
                    onclick: { enable: true, mode: 'push' },
                    resize: true
                },
                modes: {
                    grab: { distance: 140, line_linked: { opacity: 1 } },
                    push: { particles_nb: 4 }
                }
            },
            retina_detect: true
        });

        // Navbar scroll effect
        window.addEventListener('scroll', () => {
            const navbar = document.getElementById('navbar');
            if (window.scrollY > 100) {
                navbar.classList.add('scrolled');
            } else {
                navbar.classList.remove('scrolled');
            }
        });

        // Initialize Chart.js for AI performance demo
        const ctx = document.getElementById('performanceChart');
        if (ctx) {
            const chart = new Chart(ctx, {
                type: 'line',
                data: {
                    labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun'],
                    datasets: [{
                        label: 'Model Accuracy (%)',
                        data: [92.1, 94.3, 96.2, 97.1, 98.2, 98.7],
                        borderColor: '#00ff88',
                        backgroundColor: 'rgba(0, 255, 136, 0.1)',
                        borderWidth: 3,
                        fill: true,
                        tension: 0.4
                    }, {
                        label: 'Inference Speed (ms)',
                        data: [18.2, 16.1, 14.8, 13.2, 12.9, 12.4],
                        borderColor: '#0099ff',
                        backgroundColor: 'rgba(0, 153, 255, 0.1)',
                        borderWidth: 3,
                        fill: true,
                        tension: 0.4
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            labels: { color: '#ffffff' }
                        }
                    },
                    scales: {
                        y: {
                            ticks: { color: '#a0a9c0' },
                            grid: { color: 'rgba(160, 169, 192, 0.1)' }
                        },
                        x: {
                            ticks: { color: '#a0a9c0' },
                            grid: { color: 'rgba(160, 169, 192, 0.1)' }
                        }
                    }
                }
            });
        }

        // Refresh metrics function
        function refreshMetrics() {
            const refreshBtn = document.getElementById('refresh-text');
            refreshBtn.innerHTML = '<span class="loading"></span> Updating...';
            
            // Simulate API call
            setTimeout(() => {
                // Update metrics with random realistic values
                document.getElementById('models-count').textContent = Math.floor(800 + Math.random() * 100);
                document.getElementById('inference-speed').textContent = (12 + Math.random() * 2).toFixed(1) + 'ms';
                document.getElementById('data-throughput').textContent = (2.5 + Math.random() * 0.5).toFixed(1) + 'GB/s';
                document.getElementById('accuracy-rate').textContent = (98.5 + Math.random() * 0.4).toFixed(1) + '%';
                document.getElementById('global-requests').textContent = (1.1 + Math.random() * 0.2).toFixed(1) + 'M';
                document.getElementById('security-score').textContent = (99.8 + Math.random() * 0.2).toFixed(1) + '%';
                
                refreshBtn.textContent = 'Refresh Metrics';
            }, 2000);
        }

        // Contact form handling
        document.getElementById('contactForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            const submitBtn = document.getElementById('submit-text');
            submitBtn.innerHTML = '<span class="loading"></span> Sending...';
            
            // Simulate form submission
            setTimeout(() => {
                submitBtn.textContent = '✓ Message Sent!';
                this.reset();
                
                setTimeout(() => {
                    submitBtn.textContent = 'Send Message';
                }, 3000);
            }, 2000);
        });

        // Smooth scrolling for navigation links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });

        // Auto-refresh metrics every 30 seconds
        setInterval(refreshMetrics, 30000);

        // Error handling for failed resources
        window.addEventListener('error', function(e) {
            console.warn('Resource failed to load:', e.target);
            // Gracefully handle missing resources
        });

        // Performance optimization
        if ('requestIdleCallback' in window) {
            requestIdleCallback(() => {
                // Non-critical initialization
                console.log('AI Dashboard initialized successfully');
            });
        }
    </script>
</body>
</html>