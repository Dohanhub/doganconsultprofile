        function createDiagnosticsPanel() {
            let panel = document.getElementById('diagnostics-results');
            if (!panel) {
                panel = document.createElement('div');
                panel.id = 'diagnostics-results';
                panel.style.cssText = 'margin-top: 2rem; max-width: 100%; overflow-x: auto;';
                
                // Find a good container to append to
                const container = document.querySelector('.advisor-demo') || document.querySelector('.container');
                if (container) {
                    container.appendChild(panel);
                }
            }
            return panel;
        }

        }
