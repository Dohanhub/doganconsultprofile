        function showConsultationModal(title, description) {
            const modal = confirm(`📋 ${title}\n\n${description}\n\nThis consultation includes:\n✅ Detailed assessment report\n✅ 1-hour video consultation with Ahmet Dogan\n✅ Written recommendations\n✅ Follow-up support\n\nWould you like to proceed with booking this consultation?`);
            
            if (modal) {
                const consultationId = 'CS-' + Date.now().toString().slice(-6);
                alert(`✅ Consultation Request Submitted!\n\nRequest ID: ${consultationId}\n\nWe will contact you within 4 hours to schedule your consultation.\n\nExpected deliverables within 7 business days.`);
            }
        }
        
        // Initialize demo section
        function initializeLiveDemos() {
            // Set current time for next available slot
            const now = new Date();
            const nextSlot = new Date(now.getTime() + 2.5 * 60 * 60 * 1000); // 2.5 hours from now
            document.getElementById('next-available').textContent = nextSlot.toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'});
            
            // Initialize Saudi tech news
            setTimeout(refreshSaudiTechNews, 1000);
            
            // Update availability status periodically
            setInterval(() => {
                const statusIndicator = document.querySelector('.status-indicator');
                if (statusIndicator && Math.random() > 0.8) { // 20% chance to show busy
                    statusIndicator.style.background = '#f59e0b';
                    statusIndicator.parentElement.querySelector('span').textContent = 'In consultation - next available soon';
                } else if (statusIndicator) {
                    statusIndicator.style.background = '#22c55e';
                    statusIndicator.parentElement.querySelector('span').textContent = 'Available for consultation';
                }
            }, 15000); // Check every 15 seconds
        }
        
        // Enhanced Advisor JavaScript Functions
        
        // Tab Switching for Advisor
        function switchAdvisorTab(tabName) {
            // Hide all tab contents
            document.querySelectorAll('.advisor-tab-content').forEach(tab => {
                tab.classList.remove('active');
            });
            
            // Remove active class from all tab buttons
            document.querySelectorAll('.tab-button').forEach(button => {
                button.classList.remove('active');
            });
            
            // Show selected tab content
            document.getElementById(tabName + '-tab').classList.add('active');
            
            // Add active class to clicked button
            event.target.classList.add('active');
        }
        
        // Vision 2030 Insights Generator
        function generateVision2030Insights() {
            const industry = document.getElementById('vision-industry').value;
            const techFocus = document.getElementById('vision-tech-focus').value;
            
            if (!industry || !techFocus) {
                alert('Please select both industry sector and technology focus');
                return;
            }
            
            // Calculate alignment score based on industry and tech focus
            const industryScores = {
                'healthcare': 85,
                'financial': 78,
                'government': 92,
                'education': 88,
                'energy': 90,
                'retail': 75,
                'manufacturing': 82,
                'oil-gas': 95,
                'construction': 80
            };
            
            const techMultipliers = {
                'ai': 1.1,
                'iot': 1.05,
                'cloud': 1.0,
                'cybersecurity': 1.08,
                'digital-transformation': 1.02,
                'blockchain': 1.06,
                '5g': 1.12,
                'quantum': 1.15
            };
            
            const baseScore = industryScores[industry] || 80;
            const multiplier = techMultipliers[techFocus] || 1.0;
            const finalScore = Math.min(100, Math.floor(baseScore * multiplier));
            
            // Update alignment meter
            document.getElementById('alignment-meter-fill').style.width = finalScore + '%';
            document.getElementById('alignment-score-text').textContent = finalScore + '%';
            
            // Set priority level
            const priorityElement = document.getElementById('priority-level');
            let priorityClass, priorityText;
            
            if (finalScore >= 90) {
                priorityClass = 'priority-high';
                priorityText = 'Strategic Priority';
            } else if (finalScore >= 75) {
                priorityClass = 'priority-medium';
                priorityText = 'High Priority';
            } else {
                priorityClass = 'priority-low';
                priorityText = 'Development Phase';
            }
            
            priorityElement.className = 'priority-indicator ' + priorityClass;
            priorityElement.textContent = priorityText;
            
            // Generate funding information
            const fundingInfo = getFundingOpportunities(industry, techFocus);
            document.getElementById('funding-info').innerHTML = fundingInfo;
            
            // Generate detailed recommendations
            const recommendations = getDetailedRecommendations(industry, techFocus, finalScore);
            document.getElementById('vision-detailed-recommendations').innerHTML = recommendations;
            
            // Show results
            document.getElementById('vision-insights-results').style.display = 'block';
        }
        
        function getFundingOpportunities(industry, techFocus) {
            const fundingOptions = {
                'healthcare-ai': 'NEOM Health Fund: $50M available for AI healthcare solutions',
                'government-digital-transformation': 'Digital Government Fund: $200M allocated for gov tech',
                'energy-iot': 'ACWA Power Innovation Fund: $100M for energy IoT',
                'financial-blockchain': 'SAMA FinTech Sandbox: Fast-track regulatory approval',
                'education-ai': 'Ministry of Education Tech Fund: $75M for EdTech innovations',
                'manufacturing-automation': 'SIAC Manufacturing Fund: $150M for Industry 4.0',
                'default': 'Vision 2030 Innovation Fund: General technology development support available'
            };
            
            const key = industry + '-' + techFocus.replace('-', '');
            return fundingOptions[key] || fundingOptions['default'];
        }
        
        function getDetailedRecommendations(industry, techFocus, score) {
            let recommendations = '<ul>';
            
            if (score >= 90) {
                recommendations += '<li>✅ Excellent alignment - proceed with full-scale implementation</li>';
                recommendations += '<li>🎯 Focus on scaling and optimization</li>';
                recommendations += '<li>💡 Consider becoming a Vision 2030 showcase project</li>';
            } else if (score >= 75) {
                recommendations += '<li>📈 Strong foundation - enhance specific areas for maximum impact</li>';
                recommendations += '<li>🔧 Fine-tune technology stack for Saudi market requirements</li>';
                recommendations += '<li>🤝 Establish partnerships with local Saudi entities</li>';
            } else {
                recommendations += '<li>🚀 Significant opportunity - requires strategic alignment</li>';
                recommendations += '<li>📋 Develop comprehensive localization plan</li>';
                recommendations += '<li>⚡ Focus on quick wins to build momentum</li>';
            }
            
            // Add industry-specific recommendations
            const industryRecs = {
                'healthcare': '<li>🏥 Integrate with Saudi Health Information Exchange (HIE)</li>',
                'financial': '<li>💰 Ensure SAMA regulatory compliance from day one</li>',
                'government': '<li>🏛️ Align with Saudi Digital Government strategy</li>',
                'education': '<li>🎓 Partner with Saudi universities and research centers</li>',
                'energy': '<li>⚡ Focus on renewable energy and smart grid integration</li>'
            };
            
            if (industryRecs[industry]) {
                recommendations += industryRecs[industry];
            }
            
            recommendations += '</ul>';
            return recommendations;
        }
        
        // Saudi Market Readiness Calculator
        function calculateMarketReadiness() {
            const questions = ['arabic-support', 'data-sovereignty', 'saudization', 'gov-integration', 'regulatory-approval'];
            const scores = {
                'yes': 20,
                'partial': 10,
                'planned': 8,
                'in-progress': 12,
                'no': 0,
                'unsure': 0,
                'na': 15
            };
            
            let totalScore = 0;
            let answeredQuestions = 0;
            
            questions.forEach(question => {
                const selectedOption = document.querySelector(`input[name="${question}"]:checked`);
                if (selectedOption) {
                    totalScore += scores[selectedOption.value] || 0;
                    answeredQuestions++;
                }
            });
            
            if (answeredQuestions < questions.length) {
                alert('Please answer all questions to calculate your readiness score');
                return;
            }
            
            const readinessPercentage = totalScore;
            
            // Update score display
            document.getElementById('readiness-percentage').textContent = readinessPercentage + '%';
            
            // Set readiness level
            const levelElement = document.getElementById('readiness-level');
            let levelClass, levelText;
            
            if (readinessPercentage >= 80) {
                levelClass = 'level-excellent';
                levelText = 'Market Ready - Excellent';
            } else if (readinessPercentage >= 60) {
                levelClass = 'level-good';
                levelText = 'Nearly Ready - Good';
            } else {
                levelClass = 'level-needs-improvement';
                levelText = 'Needs Improvement';
            }
            
            levelElement.className = 'readiness-level ' + levelClass;
            levelElement.textContent = levelText;
            
            // Generate action plan
            const actionPlan = generateReadinessActionPlan(readinessPercentage, questions);
            document.getElementById('readiness-action-plan').innerHTML = actionPlan;
            
            // Show results
            document.getElementById('readiness-results').style.display = 'block';
        }
        
        function generateReadinessActionPlan(score, questions) {
            let actionPlan = '<ul>';
            
            if (score >= 80) {
                actionPlan += '<li>✅ Excellent readiness - proceed with market entry</li>';
                actionPlan += '<li>📊 Conduct final market validation</li>';
                actionPlan += '<li>🚀 Prepare for launch and scaling</li>';
            } else if (score >= 60) {
                actionPlan += '<li>📈 Address remaining gaps before market entry</li>';
                actionPlan += '<li>🔧 Focus on compliance and localization</li>';
                actionPlan += '<li>⏱️ Target 3-6 months for full readiness</li>';
            } else {
                actionPlan += '<li>🎯 Significant preparation needed</li>';
                actionPlan += '<li>📋 Develop comprehensive Saudi market strategy</li>';
                actionPlan += '<li>🤝 Engage local partners and consultants</li>';
                actionPlan += '<li>⏱️ Allow 6-12 months for market preparation</li>';
            }
            
