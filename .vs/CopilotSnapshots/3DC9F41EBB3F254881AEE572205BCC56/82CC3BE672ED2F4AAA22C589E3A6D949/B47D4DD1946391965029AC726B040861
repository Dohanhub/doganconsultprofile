        // Live Demo JavaScript Functions
        
        // AI ROI Calculator
        function calculateAIROI() {
            const revenue = document.getElementById('revenue-range').value;
            const industry = document.getElementById('industry-sector').value;
            const focus = document.getElementById('ai-focus').value;
            
            if (!revenue || !industry || !focus) {
                alert('Please fill in all fields to calculate AI ROI');
                return;
            }
            
            // Calculate based on industry and focus multipliers
            const baseROI = parseFloat(revenue) * 0.0001; // Base calculation
            const industryMultipliers = {
                'oil-gas': 1.8,
                'healthcare': 1.6,
                'finance': 1.9,
                'manufacturing': 1.7,
                'construction': 1.4,
                'retail': 1.5,
                'government': 1.3
            };
            
            const focusMultipliers = {
                'automation': 2.2,
                'analytics': 1.8,
                'customer': 1.6,
                'security': 1.9,
                'optimization': 2.0
            };
            
            const industryMult = industryMultipliers[industry] || 1.5;
            const focusMult = focusMultipliers[focus] || 1.7;
            
            const projectedSavings = Math.floor(baseROI * industryMult * focusMult);
            const roiPercentage = Math.floor(15 + Math.random() * 25); // 15-40% range
            const efficiencyGain = Math.floor(25 + Math.random() * 35); // 25-60% range
            
            // Display results
            document.getElementById('roi-percentage').textContent = roiPercentage + '%';
            document.getElementById('cost-savings').textContent = (projectedSavings/1000000).toFixed(1) + 'M SAR';
            document.getElementById('efficiency-gain').textContent = efficiencyGain + '%';
            
            // Generate recommendations
            const recommendations = document.getElementById('recommendations');
            const recText = getAIRecommendations(industry, focus);
            recommendations.innerHTML = `<p>${recText}</p>`;
            
            document.getElementById('roi-results').style.display = 'block';
            
            // Log for analytics
            console.log('AI ROI Calculation:', {
                revenue, industry, focus,
                projectedSavings, roiPercentage, efficiencyGain
            });
        }
        
