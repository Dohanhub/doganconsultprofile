        // Vision 2030 Alignment Assessment
        function assessVision2030() {
            const checkboxes = document.querySelectorAll('.vision-check:checked');
            const totalCategories = 8;
            const checkedCount = checkboxes.length;
            
            const alignmentPercentage = Math.floor((checkedCount / totalCategories) * 100);
            
            document.getElementById('alignment-percentage').textContent = alignmentPercentage + '%';
            
            // Generate alignment breakdown
            const breakdown = document.getElementById('alignment-breakdown');
            const nextSteps = document.getElementById('vision-next-steps');
            
            let breakdownHTML = '<h4>Alignment Breakdown:</h4><div class="alignment-items">';
            const categories = ['digital', 'smart', 'renewable', 'ai', 'fintech', 'healthcare', 'education', 'logistics'];
            
            categories.forEach(category => {
                const isChecked = document.querySelector(`[data-category="${category}"]:checked`);
                const status = isChecked ? '✅ Aligned' : '❌ Gap Identified';
                breakdownHTML += `<div class="alignment-item">${getCategoryName(category)}: ${status}</div>`;
            });
            
            breakdownHTML += '</div>';
            breakdown.innerHTML = breakdownHTML;
            
            // Generate next steps
            const missingCategories = categories.filter(cat => 
                !document.querySelector(`[data-category="${cat}"]:checked`)
            );
            
            let nextStepsHTML = '';
            if (missingCategories.length > 0) {
                nextStepsHTML = '<ul>';
                missingCategories.slice(0, 3).forEach(category => {
                    nextStepsHTML += `<li>Implement ${getCategoryName(category)} initiatives</li>`;
                });
                nextStepsHTML += '</ul>';
            } else {
                nextStepsHTML = '<p>Excellent! You are fully aligned with Vision 2030 goals. Focus on optimization and scaling.</p>';
            }
            
            nextSteps.innerHTML = nextStepsHTML;
            document.getElementById('vision-results').style.display = 'block';
        }
        
        function getCategoryName(category) {
            const names = {
                'digital': 'Digital Government',
                'smart': 'Smart Cities',
                'renewable': 'Renewable Energy',
                'ai': 'Artificial Intelligence',
                'fintech': 'Financial Technology',
                'healthcare': 'Digital Healthcare',
                'education': 'Education Technology',
                'logistics': 'Smart Logistics'
            };
            return names[category] || category;
        }
        
        // Technology Maturity Assessment
        function calculateMaturity() {
            const infrastructure = document.querySelector('input[name="infrastructure"]:checked');
            const analytics = document.querySelector('input[name="analytics"]:checked');
            const automation = document.querySelector('input[name="automation"]:checked');
            const security = document.querySelector('input[name="security"]:checked');
            
            if (!infrastructure || !analytics || !automation || !security) {
                alert('Please answer all questions to calculate maturity score');
                return;
            }
            
            const scores = [
                parseInt(infrastructure.value),
                parseInt(analytics.value),
                parseInt(automation.value),
                parseInt(security.value)
            ];
            
            const averageScore = scores.reduce((a, b) => a + b, 0) / scores.length;
            const maturityLevel = getMaturityLevel(averageScore);
            
            document.getElementById('maturity-level').textContent = maturityLevel.level;
            
            const recommendations = document.getElementById('maturity-recommendations');
            recommendations.innerHTML = `
                <div class="maturity-details">
                    <h4>Your Technology Maturity Profile:</h4>
                    <p><strong>Score:</strong> ${averageScore.toFixed(1)}/5.0</p>
                    <p><strong>Level:</strong> ${maturityLevel.level}</p>
                    <p><strong>Status:</strong> ${maturityLevel.description}</p>
                    <h5>Priority Actions:</h5>
                    ${maturityLevel.actions}
                </div>
            `;
            
            document.getElementById('maturity-results').style.display = 'block';
        }
        
        function getMaturityLevel(score) {
            if (score >= 4.5) {
                return {
                    level: 'Advanced',
                    description: 'Leading-edge technology adoption with AI-powered systems',
                    actions: '<ul><li>Focus on innovation and emerging technologies</li><li>Optimize existing AI systems</li><li>Explore quantum computing applications</li></ul>'
                };
            } else if (score >= 3.5) {
                return {
                    level: 'Intermediate',
                    description: 'Good foundation with room for AI enhancement',
                    actions: '<ul><li>Implement AI-powered analytics</li><li>Automate key business processes</li><li>Enhance cybersecurity measures</li></ul>'
                };
            } else if (score >= 2.5) {
                return {
                    level: 'Developing',
                    description: 'Basic systems in place, ready for digital transformation',
                    actions: '<ul><li>Migrate to cloud infrastructure</li><li>Implement business intelligence tools</li><li>Start process automation initiatives</li></ul>'
                };
            } else {
                return {
                    level: 'Basic',
                    description: 'Traditional IT setup requiring comprehensive modernization',
                    actions: '<ul><li>Establish cloud infrastructure</li><li>Implement basic security framework</li><li>Digitize core business processes</li></ul>'
                };
            }
        }
        
