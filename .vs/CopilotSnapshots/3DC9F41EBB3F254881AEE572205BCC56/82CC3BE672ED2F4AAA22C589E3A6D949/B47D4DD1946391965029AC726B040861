    <script>
        // Theme Toggle Functionality
        document.addEventListener('DOMContentLoaded', function() {
            const themeToggle = document.getElementById('theme-toggle');
            const prefersDarkScheme = window.matchMedia('(prefers-color-scheme: dark)');
            
            // Check for saved user preference, if any, on load
            const currentTheme = localStorage.getItem('theme');
            
            // If the current theme in localStorage is set to 'light'...
            if (currentTheme === 'light') {
                document.documentElement.setAttribute('data-theme', 'light');
            } else if (currentTheme === 'dark') {
                document.documentElement.setAttribute('data-theme', 'dark');
            } else if (prefersDarkScheme.matches) {
                // Use the OS theme preference if no explicit theme is set
                document.documentElement.setAttribute('data-theme', 'dark');
            } else {
                document.documentElement.setAttribute('data-theme', 'light');
            }
            
            // Listen for a click on the theme toggle
            if (themeToggle) {
                themeToggle.addEventListener('click', function() {
                    const currentTheme = document.documentElement.getAttribute('data-theme');
                    
                    if (currentTheme === 'light') {
                        document.documentElement.setAttribute('data-theme', 'dark');
                        localStorage.setItem('theme', 'dark');
                    } else {
                        document.documentElement.setAttribute('data-theme', 'light');
                        localStorage.setItem('theme', 'light');
                    }
                });
            }
            
            // Gallery Lightbox Functionality
            const galleryItems = document.querySelectorAll('.gallery-item');
            const lightbox = document.querySelector('.lightbox');
            const lightboxImg = document.querySelector('.lightbox-image');
            const lightboxClose = document.querySelector('.lightbox-close');
            const nav = document.querySelector('.main-nav');
            const mobileMenuToggle = document.querySelector('.mobile-menu-toggle');
            const navLinks = document.querySelector('.nav-links');
            
            // Open lightbox
            galleryItems.forEach(item => {
                item.addEventListener('click', function() {
                    const imgSrc = this.getAttribute('data-src');
                    lightboxImg.src = imgSrc;
                    lightbox.style.display = 'flex';
                    document.body.style.overflow = 'hidden';
                });
            });
            
            // Close lightbox
            lightboxClose.addEventListener('click', function() {
                lightbox.style.display = 'none';
                document.body.style.overflow = 'auto';
            });
            
            lightbox.addEventListener('click', function(e) {
                if (e.target === lightbox) {
                    lightbox.style.display = 'none';
                    document.body.style.overflow = 'auto';
                }
            });
            
            // Scroll functionality for navigation
            window.addEventListener('scroll', function() {
                if (window.scrollY > 100) {
                    nav.classList.add('scrolled');
                } else {
                    nav.classList.remove('scrolled');
                }
            });
            
            // Mobile menu toggle
            mobileMenuToggle.addEventListener('click', function() {
                navLinks.classList.toggle('active');
            });
            
            // Close mobile menu when clicking a link
            document.querySelectorAll('.nav-link').forEach(link => {
                link.addEventListener('click', function() {
                    navLinks.classList.remove('active');
                });
            });
            
            // Smooth scroll for navigation links
            document.querySelectorAll('a[href^="#"]').forEach(anchor => {
                anchor.addEventListener('click', function(e) {
                    e.preventDefault();
                    
                    const targetId = this.getAttribute('href');
                    if (targetId === '#') return;
                    
                    const targetElement = document.querySelector(targetId);
                    if (targetElement) {
                        const offsetTop = targetElement.getBoundingClientRect().top + window.pageYOffset - 80;
                        
                        window.scrollTo({
                            top: offsetTop,
                            behavior: 'smooth'
                        });
                    }
                });
            });

            // Initialize live news feeds
            fetchTechNews();
            
            // Add parallax effect to hero section
            window.addEventListener('scroll', function() {
                const scrolled = window.scrollY;
                if (scrolled <= window.innerHeight) {
                    document.querySelector('.video-bg').style.transform = `translateY(${scrolled * 0.25}px)`;
                    document.querySelector('.content').style.transform = `translateY(${scrolled * 0.15}px)`;
                }
            });
            
            // Auto-approval functionality
            const contactForm = document.querySelector('.contact-form');
            const approvalModal = document.getElementById('approvalModal');
            const closeApprovalBtn = document.getElementById('closeApproval');
            
            // Process form submission with auto-approval
            if (contactForm) {
                contactForm.addEventListener('submit', function(e) {
                    e.preventDefault();
                    
                    // Show loading state
                    const submitButton = this.querySelector('.submit-button');
                    const originalText = submitButton.textContent;
                    submitButton.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Processing...';
                    submitButton.disabled = true;
                    
                    // Simulate form processing
                    setTimeout(function() {
                        // Show auto-approval modal
                        approvalModal.classList.add('active');
                        document.body.style.overflow = 'hidden';
                        
                        // Reset form
                        contactForm.reset();
                        
                        // Reset button
                        submitButton.innerHTML = originalText;
                        submitButton.disabled = false;
                        
                        // Auto-response to user's email would be sent here in production
                        console.log('Auto-approved request processed');
                    }, 1500);
                });
            }
            
            // Close approval modal
            if (closeApprovalBtn) {
                closeApprovalBtn.addEventListener('click', function() {
                    approvalModal.classList.remove('active');
                    document.body.style.overflow = 'auto';
                });
            }
        });

        // Enhanced news configuration with multiple API options
        const newsConfig = {
            // Free APIs for development and fallback
            rss: {
                sources: [
                    {
                        name: 'BBC Technology',
                        url: 'http://feeds.bbci.co.uk/news/technology/rss.xml',
                        region: 'Global',
                        category: 'Technology'
                    },
                    {
                        name: 'MIT Technology Review',
                        url: 'https://www.technologyreview.com/feed/',
                        region: 'Global',
                        category: 'Innovation'
                    },
                    {
                        name: 'TechCrunch',
                        url: 'https://techcrunch.com/feed/',
                        region: 'Global',
                        category: 'Startups'
                    },
                    {
                        name: 'Wired',
                        url: 'https://www.wired.com/feed/rss',
                        region: 'Global',
                        category: 'Tech Culture'
                    },
                    {
                        name: 'The Next Web',
                        url: 'https://thenextweb.com/feed/',
                        region: 'Global',
                        category: 'Tech News'
                    }
                ],
                corsProxy: 'https://api.codetabs.com/v1/proxy?quest='
            },
            // Premium API for production (requires API key)
            gnews: {
                enabled: false,  // Temporarily disabled to test RSS fallback
                apiKey: '5825a8b5b31a7ee678883e7ab9d4b7ee', // TODO: Move to environment variable before production
                endpoint: 'https://gnews.io/api/v4/search',
                params: {
                    q: 'technology',
                    lang: 'en',
                    country: 'us',
                    max: 9
                }
            }
        };

        // Technology Consultation Form Handler
        document.addEventListener('DOMContentLoaded', function() {
            const consultationForm = document.getElementById('technologyConsultationForm');
            if (consultationForm) {
                consultationForm.addEventListener('submit', function(e) {
                    e.preventDefault();
                    
                    // Get form data
                    const formData = new FormData(this);
                    const formObj = {};
                    for (let [key, value] of formData.entries()) {
                        formObj[key] = value;
                    }
                    
                    // Validate required fields
                    const requiredFields = ['name', 'company', 'email', 'position', 'interest', 'budget', 'timeline', 'message'];
                    const missingFields = requiredFields.filter(field => !formObj[field] || formObj[field].trim() === '');
                    
                    if (missingFields.length > 0) {
                        alert(`Please fill in all required fields: ${missingFields.join(', ')}`);
                        return;
                    }
                    
                    if (!formObj.privacyConsent) {
                        alert('Please provide your consent to proceed with the consultation request.');
                        return;
                    }
                    
                    // Simulate form submission (in real implementation, send to server)
                    const submitButton = this.querySelector('.submit-button');
                    const originalText = submitButton.innerHTML;
                    
                    // Show loading state
                    submitButton.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Submitting Request...';
                    submitButton.disabled = true;
                    
                    // Simulate API call
                    setTimeout(() => {
                        // Reset button
                        submitButton.innerHTML = originalText;
                        submitButton.disabled = false;
                        
                        // Show success message
                        const responseDiv = document.getElementById('formResponse');
                        responseDiv.innerHTML = `
                            <i class="fas fa-check-circle"></i>
                            <strong>Technology Consultation Request Submitted Successfully!</strong><br>
                            <span style="font-size: 0.9rem;">Reference ID: TC-${Date.now().toString().slice(-6)}</span><br>
                            <span style="font-size: 0.9rem;">Expected Response: Within 24 hours</span><br>
                            ${formObj.agentDemo ? '<span style="font-size: 0.9rem;">🤖 AI Agent demo requested - We\'ll include this in our follow-up!</span>' : ''}
                        `;
                        responseDiv.style.display = 'block';
                        responseDiv.scrollIntoView({ behavior: 'smooth', block: 'center' });
                        
                        // Log consultation request (for analytics)
                        console.log('Technology Consultation Request:', {
                            timestamp: new Date().toISOString(),
                            client: formObj.name,
                            company: formObj.company,
                            interest: formObj.interest,
                            budget: formObj.budget,
                            timeline: formObj.timeline,
                            agentDemo: formObj.agentDemo || false,
                            urgency: formObj.timeline === 'immediate' ? 'high' : 'normal'
                        });
                        
                        // Reset form
                        this.reset();
                        
                    }, 2000);
                });
            }
            
            // Initialize news feed
            fetchTechNews();
            
            // Add event listener for manual refresh button
            const refreshButton = document.getElementById('refresh-news');
            if (refreshButton) {
                refreshButton.addEventListener('click', function() {
                    this.classList.add('spinning');
                    fetchTechNews().finally(() => {
                        setTimeout(() => {
                            this.classList.remove('spinning');
                        }, 1000);
                    });
                });
            }
            
            // Set up automatic refresh every 30 minutes
            setInterval(fetchTechNews, 30 * 60 * 1000);
        });

        // Fetch tech news using GNews API with RSS fallback
        async function fetchTechNews() {
            const newsContainer = document.querySelector('.news-container');
            
            // Show loading state
            newsContainer.innerHTML = `
                <div class="loading-container">
                    <div class="loading-spinner"></div>
                    <p>Fetching latest technology news from global sources...</p>
                </div>
            `;
            
            try {
                let newsItems = [];
                
                // Try GNews API first if enabled
                if (newsConfig.gnews.enabled) {
                    try {
                        const gnewsItems = await fetchGNewsAPI();
                        if (gnewsItems && gnewsItems.length > 0) {
                            newsItems = gnewsItems;
                        }
                    } catch (apiError) {
                        console.warn('GNews API failed, falling back to RSS feeds:', apiError);
                    }
                }
                
                // If no news from GNews API, try RSS feeds
                if (newsItems.length === 0) {
                    newsItems = await fetchFromRSSFeeds();
                }
                
                // Clear loading state
                newsContainer.innerHTML = '';
                
                // If we have news items, display them
                if (newsItems.length > 0) {
                    // Display news items (up to 6)
                    const newsToShow = newsItems.slice(0, 6);
                    newsToShow.forEach(item => {
                        const newsCard = createNewsCard(item);
                        newsContainer.appendChild(newsCard);
                    });
                } else {
                    // If all methods failed, load default news
                    newsContainer.innerHTML = '<div class="error-container"><p>Unable to fetch the latest news. Loading default content.</p></div>';
                    loadDefaultNews();
                }
            } catch (error) {
                console.error('Error fetching news:', error);
                newsContainer.innerHTML = `
                    <div class="error-container">
                        <i class="fas fa-exclamation-triangle"></i>
                        <p>Unable to fetch the latest news. Please try again later.</p>
                        <button onclick="fetchTechNews()" class="retry-btn">Try Again</button>
                    </div>
                `;
                // Load default news as fallback
                setTimeout(loadDefaultNews, 1000);
            }
            
            return true; // For promise chaining with the refresh button
        }
        
        // Fetch news from GNews API
        async function fetchGNewsAPI() {
            const { apiKey, endpoint, params } = newsConfig.gnews;
            console.log('Using GNews API Key:', apiKey);  // Debug log
            
            // Build URL with parameters
            const url = new URL(endpoint);
            Object.entries(params).forEach(([key, value]) => {
                url.searchParams.append(key, value);
            });
            url.searchParams.append('apikey', apiKey);
            
            const response = await fetch(url.toString());
            
            if (!response.ok) {
                throw new Error(`GNews API error: ${response.status}`);
            }
            
            const data = await response.json();
            
            // Transform GNews format to our standard format
            return data.articles.map(article => ({
                title: article.title,
                link: article.url,
                description: article.description,
                pubDate: article.publishedAt,
                imageUrl: article.image || 'https://images.unsplash.com/photo-1518770660439-4636190af475?q=80&w=3270&auto=format&fit=crop',
                source: article.source?.name || 'News API',
                category: getCategoryFromTitle(article.title),
                region: 'Global'
            }));
        }
        
        // Enhanced RSS feed fetcher with better error handling
        async function fetchFromRSSFeeds() {
            const { sources, corsProxy } = newsConfig.rss;
            let allNewsItems = [];
            const parser = new DOMParser();
            
            // Process each source with better error handling
            for (const source of sources) {
                try {
                    console.log(`Fetching from ${source.name}...`);
                    const items = await fetchNewsFromRSSSource(source, corsProxy);
                    if (items && items.length > 0) {
                        allNewsItems = [...allNewsItems, ...items];
                        console.log(`✅ Fetched ${items.length} items from ${source.name}`);
                    }
                } catch (error) {
                    console.warn(`⚠️ Failed to fetch from ${source.name}:`, error.message);
                    continue; // Skip to next source on error
                }
            }
            
            // Sort by published date (newest first)
            allNewsItems.sort((a, b) => new Date(b.pubDate) - new Date(a.pubDate));
            
            return allNewsItems;
        }
        
        // Fetch news from a specific RSS source
        async function fetchNewsFromRSSSource(source, corsProxy) {
            try {
                // Use the proxy to avoid CORS issues
                const response = await fetch(corsProxy + encodeURIComponent(source.url));
                
                if (!response.ok) {
                    throw new Error(`Failed to fetch RSS from ${source.name}: ${response.status}`);
                }
                
                const data = await response.text();
                
                // Parse the RSS XML
                const parser = new DOMParser();
                const xml = parser.parseFromString(data, "application/xml");
                const items = xml.querySelectorAll("item");
                
                if (!items || items.length === 0) {
                    console.warn(`No items found in RSS feed for ${source.name}`);
                    return [];
                }
                
                // Extract and format news items
                return Array.from(items).slice(0, 3).map(item => {
                    const title = item.querySelector("title")?.textContent || 'No title available';
                    const link = item.querySelector("link")?.textContent || '#';
                    const description = item.querySelector("description")?.textContent || '';
                    const pubDate = item.querySelector("pubDate")?.textContent || new Date().toUTCString();
                    
                    // Extract image from content if available
                    let imageUrl = 'https://images.unsplash.com/photo-1518770660439-4636190af475?q=80&w=3270&auto=format&fit=crop';
                    
                    // Try to extract image from content or enclosure
                    const content = item.querySelector("content\\:encoded")?.textContent || 
                                  item.querySelector("content")?.textContent || description;
                    
                    const imgMatch = content.match(/<img[^>]+src="([^">]+)"/);
                    if (imgMatch && imgMatch[1]) {
                        imageUrl = imgMatch[1];
                    } else {
                        // Check for media:content or enclosure
                        const mediaContent = item.querySelector("media\\:content, media\\:thumbnail");
                        if (mediaContent && mediaContent.getAttribute('url')) {
                            imageUrl = mediaContent.getAttribute('url');
                        }
                        
                        const enclosure = item.querySelector("enclosure");
                        if (enclosure && enclosure.getAttribute('url') && enclosure.getAttribute('type')?.startsWith('image')) {
                            imageUrl = enclosure.getAttribute('url');
                        }
                    }
                    
                    // Clean description (remove HTML tags)
                    const cleanDescription = description.replace(/<\/?[^>]+(>|$)/g, "").trim();
                    
                    return {
                        title,
                        link,
                        description: cleanDescription.substring(0, 150) + '...',
                        pubDate,
                        imageUrl,
                        source: source.name,
                        category: source.category || getCategoryFromTitle(title),
                        region: source.region || 'Global'
                    };
                });
            } catch (error) {
                console.error(`Error fetching from ${source.name}:`, error);
                return [];
            }
        }
        
        // Helper function to categorize news based on keywords in title
        function getCategoryFromTitle(title) {
            const categories = [
                { name: 'AI & Machine Learning', keywords: ['ai', 'artificial intelligence', 'machine learning', 'deep learning', 'neural network'] },
                { name: 'Blockchain & Crypto', keywords: ['blockchain', 'crypto', 'bitcoin', 'ethereum', 'nft', 'web3'] },
                { name: 'Cloud Computing', keywords: ['cloud', 'aws', 'azure', 'google cloud', 'serverless'] },
                { name: 'Cybersecurity', keywords: ['security', 'hack', 'breach', 'cyber', 'ransomware', 'malware'] },
                { name: 'Mobile Technology', keywords: ['mobile', 'smartphone', 'app', 'android', 'ios', 'iphone'] },
                { name: 'Sustainable Tech', keywords: ['green', 'sustainable', 'renewable', 'climate', 'energy'] },
                { name: 'Defense Technology', keywords: ['defense', 'military', 'weapon', 'drone', 'autonomous'] }
            ];
            
            const lowercaseTitle = title.toLowerCase();
            
            for (const category of categories) {
                if (category.keywords.some(keyword => lowercaseTitle.includes(keyword))) {
                    return category.name;
                }
            }
            
            return 'Technology';
        }
        
        // Create HTML for a news card
        function createNewsCard(newsItem) {
            // Calculate time ago
            const timeAgo = getTimeAgo(new Date(newsItem.pubDate));
            
            // Create card element
            const card = document.createElement('div');
            card.className = 'news-card';
            
            // Add click handler to open the news link
            card.addEventListener('click', () => {
                window.open(newsItem.link, '_blank');
            });
            
            // Create card HTML
            card.innerHTML = `
                <div class="news-image">
                    <img src="${newsItem.imageUrl}" alt="${newsItem.title}" onerror="this.src='https://images.unsplash.com/photo-1518770660439-4636190af475?q=80&w=3270&auto=format&fit=crop'">
                </div>
                <div class="news-content">
                    <span class="news-source">${newsItem.source}</span>
                    <h3 class="news-title">${newsItem.title}</h3>
                    <p class="news-excerpt">${newsItem.description}</p>
                    <div class="news-meta">
                        <span>${timeAgo}</span>
                        <span>${newsItem.category}</span>
                    </div>
                </div>
            `;
            
            return card;
        }
        
        // Format relative time (e.g., "2 hours ago")
        function getTimeAgo(date) {
            const seconds = Math.floor((new Date() - date) / 1000);
            
            let interval = Math.floor(seconds / 31536000);
            if (interval > 1) return interval + ' years ago';
            if (interval === 1) return interval + ' year ago';
            
            interval = Math.floor(seconds / 2592000);
            if (interval > 1) return interval + ' months ago';
            if (interval === 1) return interval + ' month ago';
            
            interval = Math.floor(seconds / 86400);
            if (interval > 1) return interval + ' days ago';
            if (interval === 1) return interval + ' day ago';
            
            interval = Math.floor(seconds / 3600);
            if (interval > 1) return interval + ' hours ago';
            if (interval === 1) return interval + ' hour ago';
            
            interval = Math.floor(seconds / 60);
            if (interval > 1) return interval + ' minutes ago';
            if (interval === 1) return interval + ' minute ago';
            
            return 'Just now';
        }
        
